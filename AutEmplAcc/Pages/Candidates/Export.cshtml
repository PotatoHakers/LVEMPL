@page
@model AutEmplAcc.Pages.Candidates.ExportModel
@{
}

<h1>Экспорт отчета в Word</h1>

<dl class="row">
    <dt class="col-sm-2">Имя</dt>
    <dd class="col-sm-10">@Model.Candidate.FirstName</dd>
    <dt class="col-sm-2">Фамилия</dt>
    <dd class="col-sm-10">@Model.Candidate.LastName</dd>
    <dt class="col-sm-2">Отчество</dt>
    <dd class="col-sm-10">@Model.Candidate.Patronymic</dd>
    <dt class="col-sm-2">Дата рождения</dt>
    <dd class="col-sm-10">@Model.Candidate.DateOfBirth.ToShortDateString()</dd>
    <dt class="col-sm-2">Номер телефона</dt>
    <dd class="col-sm-10">@Model.Candidate.PhoneNumber</dd>
    <dt class="col-sm-2">Адрес</dt>
    <dd class="col-sm-10">@Model.Candidate.Address</dd>
    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Candidate.Email</dd>
    <dt class="col-sm-2">Гражданство</dt>
    <dd class="col-sm-10">@Model.Candidate.Citizenship</dd>
    <dt class="col-sm-2">Служба</dt>
    <dd class="col-sm-10">@(Model.Candidate.HasServed ? "Да" : "Нет")</dd>
    <dt class="col-sm-2">Номер военного билета</dt>
    <dd class="col-sm-10">@Model.Candidate.MilitaryTicketNumber</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Экспортировать в Word</button>
</form>