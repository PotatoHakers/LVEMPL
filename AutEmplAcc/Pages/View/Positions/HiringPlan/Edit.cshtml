@page
@model AutEmplAcc.Pages.View.Positions.HiringPlan.EditModel
@{
}
<h1>Редактировать план набора</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Position.Id" />
    <div class="form-group">
        <label asp-for="Position.Name" class="control-label"></label>
        <input asp-for="Position.Name" class="form-control" />
        <span asp-validation-for="Position.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position.HourlyRate" class="control-label"></label>
        <input asp-for="Position.HourlyRate" class="form-control" />
        <span asp-validation-for="Position.HourlyRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position.HiringTarget" class="control-label"></label>
        <input asp-for="Position.HiringTarget" class="form-control" />
        <span asp-validation-for="Position.HiringTarget" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position.HiringStartDate" class="control-label"></label>
        <input asp-for="Position.HiringStartDate" class="form-control" type="date" />
        <span asp-validation-for="Position.HiringStartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Position.HiringEndDate" class="control-label"></label>
        <input asp-for="Position.HiringEndDate" class="form-control" type="date" />
        <span asp-validation-for="Position.HiringEndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
