@page
@model AutEmplAcc.Pages.Employees.Vacations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vacation[0].Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacation[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacation[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacation[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Vacation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VacationId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.VacationId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.VacationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-page="./AllVacationExport" class="hidden-print">Экспортировать отчет по всем отпускным в Word</a>
